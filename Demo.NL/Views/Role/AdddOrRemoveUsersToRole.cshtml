@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "AdddOrRemoveUsersToRole";
    var RoleId = ViewBag.Roleid;
}

<h1>AdddOrRemoveUsersToRole</h1>

<form class=" my-3" asp-action="AdddOrRemoveUsersToRole" asp-route-Roleid="@RoleId">
    @for(var i = 0;i<Model.Count;i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected">
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>
        <input type="hidden" asp-for="@Model[i].UserId">
        <input type="hidden" asp-for="@Model[i].UserName">
    }
        <div class="my-3">
            <input type ="submit" value="Update" class="btn btn-success">
        <a asp-page-handler="Update" asp-page="/Roles/Index" class="btn btn-light">Cancel</a>
    </div>
    


</form>
