@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />

<a class="btn btn-success" asp-action="Create" class="btn htn-primary">Create</a>
<form class="my-3" asp-action="Index" asp-controller="User" >
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Serach By Email " name="SerachVlaue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>

</form>
@if (Model?.Count() > 0)
{
    <table class="table table-striped able-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=>x.Id)</th>
                <th>@Html.DisplayNameFor(x=>x.UserName)</th>
                <th>@Html.DisplayNameFor(x=>x.Address)</th>
                <th>@Html.DisplayNameFor(x=>x.Email)</th>
                <th>@Html.DisplayNameFor(x=>x.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(x=>x.IsAgree)</th>
                <th>Detiales</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.IsAgree
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye">Details</i></a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-eye">Delete</i></a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id"><i class="fas fa-eye">Update</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <divclass ="alert alert-warning">
        <h3>No Data Where Found</h3>
    </divclass>
}