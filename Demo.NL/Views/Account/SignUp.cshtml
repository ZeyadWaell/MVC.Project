
@model RegisterViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignUp">
            <input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="" />
            <span asp-validation-for="@Model.Email" class="alert-danger"></span>
            <input class="text " type="password" asp-for="@Model.Password" placeholder="Email" required="" />
            <span asp-validation-for="@Model.Password" class="alert-danger"></span>
            <input class="text-black-50 w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="" />
            <span asp-validation-for="@Model.ConfirmPassword" class="alert-danger"></span>
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="@Model.isAgree" class="checkbox" required="" />
                    <span>I Agree to the Terms and Condtions</span>
                </label>
                <div class="clear"></div>
            </div>
            <input type="submit" value="SignUp" />
        </form>
        <p>Already have an Account? <a asp-action="SignIn">Login Now</a></p>
    </div>
</div>