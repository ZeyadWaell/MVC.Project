@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br/>

<a class="btn btn-success" asp-action="Create" class="btn htn-primary">Create</a>
@if (ViewData["Message"] != null)
{
    <h1>@ViewData["Message"] = "Hello World from Controller";</h1>
}
@if(Model?.Count()>0){
    <table class = "table table-striped able-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=>x.Name)</th>
                <th>@Html.DisplayNameFor(x=>x.Code)</th>
                <th>Detiales</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Code
                    </td>
                    <td>
                        @item.Name
                    </td>
                   <partial name ="_Button" model ="@item.Id"/>
                </tr>
            }
        </tbody>
    </table>
}else{
    <divclass ="alert alert-warning">
        <h3>No Departments Found</h3>
    </divclass>
}