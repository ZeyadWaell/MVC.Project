@model Department
@{
    ViewData["Title"] = "Details";
}
<h1>Detalies</h1>
<div class="row">
    <div class="col-6">
      
            <div class="form-group">
                <label asp-for="@Model.Code" class="col-form-lable"></label>
                <input asp-for="@Model.Code" class="form-control" readonly />
             
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-lable"></label>
                <input asp-for="@Model.Name" class="form-control" readonly />

            </div>
            <br />
            <a asp-action="Edit" class="btn btn-primary" asp-route-Id="@Model.Id">Edit</a>
            <a asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</div>